<div class="container">
  <div class="section">
    <!--   Icon Section   -->
    <div class="row">
      <div class="col s12">
        <ul class="collapsible popout">
          <% @courses.each_with_index do |course,index | %>
            <li>
              <div class="collapsible-header"><i class="material-icons">filter_drama</i><%= course.name %><a href="<%=new_dish_path(course: course.id) %>" class="add"><i class="material-icons right-align  blue-text tooltipped" data-position="top" data-tooltip="Add Dish">library_add</i></a></div>
              <div class="collapsible-body">
                <%=image_tag "course_#{index+1}" , class: "responsive-img" , size: "400"%>
                <div class="row">
                  <% course.dishes.each do |dish| %>
                    <div class="col s12 m4">
                      <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                          <span class="card-title"><%=link_to dish.name, edit_dish_path(dish.id) %></span>
                          <p>Price: <%= dish.price %> INR</p>
                          <p>Description: <%= dish.description %></p>
                        </div>
                        <div class="card-action">
                          <%=link_to "Show", edit_dish_path(dish.id) %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <br><br>
</div>